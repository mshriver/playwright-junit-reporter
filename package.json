{
  "name": "playwright-meta-schema",
  "version": "0.0.0",
  "packageManager": "yarn@1.22.22",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": "github.com/RedHatQE/playwright-meta-schema.git",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "playwright-meta-validator": "./dist/lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --fix && prettier . --write",
    "test": "tsc && node --test dist/schema/*.test.js dist/lib/*.test.js",
    "test:dev": "tsc && node --test dist/schema/annotations.test.js dist/schema/tags.test.js dist/lib/integration.test.js dist/lib/cli.test.js",
    "test:coverage": "tsc && c8 node --test dist/schema/*.test.js dist/lib/*.test.js",
    "test:coverage:dev": "tsc && c8 node --test dist/schema/annotations.test.js dist/schema/tags.test.js dist/lib/integration.test.js dist/lib/cli.test.js",
    "coverage:report": "c8 report",
    "coverage:check": "c8 check-coverage",
    "coverage:summary": "c8 report --reporter=text-summary > coverage/coverage-summary.txt",
    "validate:playwright": "tsc && node dist/lib/cli.js"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module"
}
